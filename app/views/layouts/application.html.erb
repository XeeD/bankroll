<!DOCTYPE html>
<html>
<head>
  <title>Bankroll</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice].present? %>
<div class='flash_notice'><%= flash[:notice] %></div>
<% end %>

<div id="user_nav">
  <% if user_signed_in? %>
      Signed in as <%= current_user.email %>. <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <% else %>
      <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  <% end %>
</div>

<%= yield %>

<p>
  <%= link_to 'Statistics (home)', root_path %><br />
  <%= link_to 'Manage games', games_path %><br />
  <%= link_to 'Manage casinos', casinos_path %><br />
</p>
</body>
</html>
