<h1>Listing games</h1>

<table>
  <tr>
    <th>Buy-in</th>
    <th>Prize</th>
    <th>Game variant</th>
    <th>Casino / play room</th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.buyin %></td>
    <td><%= game.prize %></td>
    <td><%= game.variant.name %></td>
    <td><%= game.casino.name %></td>
    <td><%= link_to 'Change', edit_game_path(game) %></td>
    <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Write a new game', new_game_path %>
